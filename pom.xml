<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>br.gov.lexml.madoc</groupId>
	<artifactId>madoc-swing</artifactId>
	<version>0.0.64-SNAPSHOT</version>

	<name>Automatic Document Assembler</name>
	<description>Montador autom√°tico de documentos</description>

	<url>http://www.lexml.gov.br</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- github server corresponds to entry in ~/.m2/settings.xml -->
		<github.global.server>github</github.global.server>

		<maven.javadoc.skip>true</maven.javadoc.skip>
		<maven.test.skip>true</maven.test.skip>
		<maven.site.skip>true</maven.site.skip>
	</properties>

	<scm>
		<url>https://github.com/lexml/${project.artifactId}</url>
		<developerConnection>scm:git:https://github.com/lexml/${project.artifactId}.git</developerConnection>
		<connection>scm:git:https://github.com/lexml/${project.artifactId}.git</connection>
		<tag>HEAD</tag>
	</scm>
	
	<repositories>
		<repository>
			<id>bintray-lexml-lexml</id>
			<name>bintray</name>
			<url>https://dl.bintray.com/lexml/lexml</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	
	<distributionManagement>
		<repository>
			<id>bintray-lexml-lexml</id>
			<name>lexml-lexml</name>
			<url>https://api.bintray.com/maven/lexml/lexml/${project.artifactId}/;publish=1</url>
		</repository>
	</distributionManagement>	

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>3.0.0-M1</version>
				<configuration>
					<detail>true</detail>
					<allowTimestampedSnapshots>true</allowTimestampedSnapshots>
				</configuration>
			</plugin>
			<plugin>
			  <groupId>org.apache.maven.plugins</groupId>
			  <artifactId>maven-source-plugin</artifactId>
			  <executions>
			    <execution>
			      <id>attach-sources</id>
			      <goals>
			        <goal>jar</goal>
			      </goals>
			    </execution>
			  </executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<compilerArguments>
						<g />
						<deprecation />
					</compilerArguments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.8.2</version>
				<executions>
					<execution>
						<id>jaxb2-schemas</id>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<extension>true</extension>

					<args>
						<arg>-Xcopyable</arg>
						<arg>-Xinheritance</arg>
						<arg>-Xvisitor</arg>
						<arg>-Xvisitor-package:br.gov.lexml.madoc.schema.entity.visitor</arg>
					</args>

					<schemaDirectory>src/main/xsd</schemaDirectory>
					<generatePackage>br.gov.lexml.madoc.schema.entity</generatePackage>
					<generateDirectory>${project.build.directory}/generated-sources/xjc</generateDirectory>

					<plugins>
						<plugin>
							<groupId>org.ops4j.xvisitor</groupId>
							<artifactId>xvisitor-plugin</artifactId>
							<version>0.1.0</version>
						</plugin>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>jaxb2-basics</artifactId>
							<version>0.6.4</version>
						</plugin>
					</plugins>
				</configuration>
			</plugin>

			<!-- Manifest info -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<index>false</index>

						<manifestEntries>
							<Project-version>${project.version}</Project-version>
						</manifestEntries>
						<manifestSections>
							<manifestSection>
								<name>pdfa-fonts/GenBasB.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/GenBasBI.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/GenBasI.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/GenBasR.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>

							<manifestSection>
								<name>pdfa-fonts/FreeSerif.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerifBold.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerifBoldItalic.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerifItalic.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
						</manifestSections>
					</archive>
				</configuration>
			</plugin>

